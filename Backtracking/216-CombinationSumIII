// LeetCode #216
// Approach: Backtracking 
// Date: 20251120

class Solution {
    public List<List<Integer>> combinationSum3(int k, int n) {
        List<List<Integer>> res = new ArrayList<>();
        backTracking(k, n, 1, li, res);
        return res;

    }

    private void backTracking(int k, int sum, int start, List<Integer> li, List<List<Integer>> res) {
        //base case: add iff combination (sum) of k number = n 
        if (sum == 0 && k == 0) {
            //add a copy of current li 
            res.add(new ArrayList<>(li));
            return; 
        }

        //base case: abort if combination exceeds the target n or 
        //sum of k numbers doesn't meet the target  
        if (sum < 0 || k < 0) {
            return;
        }

        //Init the current element from i = start to 9 to filter out duplicates  
        for (int i = start; i <= 9; i++) {
            if (i <= sum) {
                li.add(i);
                backTracking(k - 1, sum - i, i + 1, li, res);
                li.remove(li.size() - 1);

            } else {
                return;
            }
        }

    }
}
    