class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
      sort(nums.begin(), nums.end());
      int n = nums.size();

      //Got integer overflow for abs(target - sum) < abs(target - closest) with INT_MAX
      //use nums[0], nums[1], and nums[2] instead
      int closest = nums[0] + nums[1] + nums[2];

      for (int i = 0; i < n; i++) {
         int l = i + 1; 
         int r = n - 1; 

         while (l < r) {
            int sum = nums[i] + nums[l] + nums[r];

            if (abs(target - sum) < abs(target - closest)) {
               closest = sum;
            }

            if (sum < target) {
               l++;
            } else if (sum > target) {
               r--; 
            } else {
               return target; 
            }
         }
      }

      return closest; 
    }
};