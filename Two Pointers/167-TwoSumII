// LeetCode #167
// Approach: brute force O(n) >> two pointers O(n) with SC: O(1)
// Date: 20251125

class Solution {
    public int[] twoSum(int[] numbers, int target) {
        int n = numbers.length;
        int l = 0;
        int r = n - 1; 

        while (l < r) {
            int temp = numbers[l] + numbers[r];

            if (temp < target) {
                l++;
            }

            if (temp > target) {
                r--;
            }
            
            if (temp == target) {
                //Java requires every array to be explicitly constructed using the
                //new keyword unless it appears inline during variable init
                return {l + 1, r + 1};
            }
        }
        return {};
        
    }
}