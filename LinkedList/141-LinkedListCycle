// LeetCode #141
// Approach: HashMap to store visited node at first --> O(n) space
//           Floyd's Cycle Detection Algorithm to optimize 
// Date: 20251108


/**
 * Definition for singly-linked list.
 * class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */

public class Solution {
    public boolean hasCycle(ListNode head) {
        ListNode slow = head;
        ListNode fast = head;

        //fast.next != null cond is needed for odd length list just like 
        //MiddleOfTheLinkedList problem 
        while (fast != null && fast.next != null) {
            slow = slow.next;
            fast = fast.next.next;
            if (slow == fast) {
                return true;
            }
        }
        return false;
        
    }
}