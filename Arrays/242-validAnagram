class Solution {
    public boolean isAnagram(String s, String t) {
        //Note: I should start from import Hashtable & it is Hashtable not HashTable 
        //Write Character, not Char within <>
        Hashtable<Character, Integer> sHash = new Hashtable<>();
        Hashtable<Character, Integer> tHash = new Hashtable<>();

        //I can't use a variable name char becuase it is a reserved keyword of 
        //data type character in Java 
        for (char c : s) {
            //There's no contains() in Hashtable. Should use containsKey()
            //I can do getOrDefault(c, 0) as well
            if (!sHash.containsKey(c)) {
                sHash.put(c, 1);
            } else {
                sHash.put(c, sHash.get(c) + 1);
            }

        }

        for (char c : t) {
            if (!tHash.containsKey(c)) {
                tHash.put(c, 1);
            } else {
                tHash.put(c, tHash.get(c) + 1);
            }

        }     

        if (sHash.equals(tHash)) {
            return true;
        }

        return false;
        
    }
}