// LeetCode #49 Group Anagrams 
// Approach: O(nm) where m is the length of an element & n is the number of elements
//           O(n) auxiliary space (the total extra space beyond input/output) due to
//           HashMap storing up to one entry per input string 
// Date: 20251107
class Solution {
    public List<List<String>> groupAnagrams(String[] strs) {
        HashMap<String, List<String>> map = new HashMap<>();

        for (String s : strs) {
            int[] count = new int[26];
            for (int i = 0; i < s.length(); i++) {
                count[s.charAt(i) - 'a']++;
            }

            //It is Arrays.toString not ArraytoString 
            String key = Arrays.toString(count);

            //It will still run even if I miss out <String> and write new ArrayList<>()
            List<String> temp = map.getOrDefault(key, new ArrayList<String>());
            temp.add(s);
            map.put(key, temp);
        }

        //map.values() won't compile due to incompatible types 
        //map.values() returns a Collection<List<String>>
        //Collection<List<String>> cannot be converted to List<List<String>>
        return new ArrayList<>(map.values()); 
    }
    
}